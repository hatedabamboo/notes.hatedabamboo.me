<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
{% if title %}
  <title>{{ title }}</title>
{% else %}
  <title>{{ site.name }}</title>
{% endif %}
{% if description %}
  <meta name="description" content="{{ description }}">
{% else %}
  <meta name="description" content="{{ site.description }}">
{% endif %}
{% if author %}
  <meta name="author" content="{{ author }}">
{% else %}
  <meta name="author" content="{{ site.author }}">
{% endif %}
{% if canonical_url %}
  <link rel="canonical" href="{{ canonical_url }}">
{% endif %}
{% if collections.posts %}
  <link rel="alternate" type="application/rss+xml" title="{{ site.name }} RSS Feed" href="/feed.xml">
{% endif %}
<link rel="icon" href="/assets/favicon.png">
<link rel="stylesheet" href="/css/style.css">
<script defer data-domain="notes.hatedabamboo.me" src="https://pa.hatedabamboo.me/js/script.js"></script>
<!-- social stuff -->
<meta property="og:type" content="article">
<meta property="og:title" content="{{ title or site.name }}">
<meta property="og:description" content="{{ description or site.description }}">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
{% setAsync "ogImageUrl" -%}
  {% ogImage "/_includes/partials/og-image.og.njk", { title: title , name: site.name, description: site.description } %}
{%- endsetAsync %}
<meta property="og:image" content="{{ site.url }}{{ ogImageUrl }}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:site_name" content="{{ site.name }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title or site.name }}">
<meta name="twitter:description" content="{{ description or site.description }}">
<meta name="twitter:image" content="{{ site.url }}{{ ogImageUrl }}">
